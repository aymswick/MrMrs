<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productTitle"

        android:layout_alignParentTop="true"
        android:text="@string/product_title"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textAlignment="center"
        android:fontFamily="Raleway"
        android:focusableInTouchMode="false"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_light"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopSimilar"

        android:text="@string/shopsimilar"
        android:textStyle="italic"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:fontFamily="Raleway"
        android:focusableInTouchMode="false"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionalInfo"

        android:text="@string/optional"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_below="@+id/space2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:fontFamily="Raleway"
        android:focusableInTouchMode="false"
        android:textColor="@color/abc_primary_text_material_light"
        android:paddingBottom="15dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/productTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space"></Space>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/shopSimilar"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shop"
        android:id="@+id/buttonShop"
        android:layout_below="@+id/optionalInfo"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Material.Button"
        android:background="#03a9f4" />

    <Button
        style="@android:style/MediaButton.Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:id="@+id/dialogRight"
        android:layout_above="@+id/space2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="50dp" />

    <Button
        style="@android:style/MediaButton.Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/dialogLeft"
        android:layout_above="@+id/space2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="50dp" />

</RelativeLayout>